<h2>Campgrounds</h2>
{{!-- Create a table --}}
<table id="campgrounds-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Phone</th>
            <th>Sites</th>
            <th>State</th>
            <th>Town</th>
            <th>Distance</th>
            <th>Longitude</th>
            <th>Latitude</th>
            <th></th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the variables, in order --}}
        {{#each data}}
        <tr data-value={{this.CampgroundId}}>
            <td>{{this.CampgroundId}}</td>
            <td>{{this.CampgroundName}}</td>
            <td>{{this.CampgroundPhone}}</td>
            <td>{{this.NumberOfSites}}</td>
            <td>{{this.CampgroundState}}</td>
            <td>{{this.ClosestTown}}</td>
            <td>{{this.DistanceToTown}}</td>
            <td>{{this.Longitude}}</td>
            <td>{{this.Latitude}}</td>
            <td><button onclick="deleteCampground({{this.CampgroundId}})">delete</button></td>

        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_campground.js"></script>

