<h2>Add A Campground</h2>
<h3>Add Campground information below and click `Submit`.</h3>
<form id="add-campground-form" method="POST" action="/add-campground-form">
    <label for="input-name">Campground Name: </label>
    <input type="text" name="input-name" id="input-name">
    <br>
    <label for="input-phone">Phone: </label>
    <input type="text" name="input-phone" id="input-phone">
    <br>
    <label for="input-sites">Number of Sites: </label>
    <input type="number" min="0" name="input-sites" id="input-sites">
    <br>
    <label for="input-state">State: </label>
    <input type="text" name="input-state" id="input-state">
    <br>
    <label for="input-town">Town: </label>
    <input type="text" name="input-town" id="input-town">
    <br>
    <label for="input-distance">Distance: </label>
    <input type="number" step="0.001" min ="0" name="input-distance" id="input-distance">
    <br>
    <label for="input-longitude">Longitude: </label>
    <input type="number" step="0.001" default ="0" name="input-longitude" id="input-longitude">
    <br>
    <label for="input-latitude">Latitude: </label>
    <input type="number" step="0.001" default ="0" name="input-latitude" id="input-latitude">
    <br>
    <input type="submit">
</form>

